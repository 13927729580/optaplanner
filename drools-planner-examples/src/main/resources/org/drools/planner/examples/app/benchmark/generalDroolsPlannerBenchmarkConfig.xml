            <termination>
                <maximumMinutesSpend>5</maximumMinutesSpend>
            </termination>
            <selector>
                <selector>
                    <moveFactoryClass>org.drools.planner.examples.curriculumcourse.solver.move.factory.PeriodChangeMoveFactory</moveFactoryClass>
